{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "strict": true,
        "allowJs": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "noEmit": true,
        "types": [
            "vite/client", "node"
        ],
        "paths": {
            "@/*": ["src/*"],
            "@web/*": ["app/Laravel/Resources/js/web/*"],
            "@ziggy/*": ["vendor/tightenco/ziggy/src/js/*"] 
        }
    },
    "include": [
        "app/Laravel/Resources/js/web/**/*.ts", 
        "app/Laravel/Resources/js/web/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.tsx",
    ],
    "exclude": [
        "app/Laravel/Resources/js/bootstrap.js", 
        "node_modules", 
        "vendor"
    ]
}